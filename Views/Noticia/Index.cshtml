 @model Noticias
    @{
        ViewData["Title"] = "Noticias";
    }
    
     <div class="titulo_pagina">
        <h1>Noticias</h1>
     </div>


    <form class="cadastro" action="@Url.Action("Cadastrar")" method="post" enctype="multipart/form-data">
     <div class="campo">
           <label for="IdNoticia">IdNoticia</label>
           <input type="text" name="IdNoticia" id="IdNoticia">
     </div>

     <div class="campo">
      <label for="Titulo">Titulo</label>
      <input type="text" name="Titulo" id="Titulo">
    </div>

    <div class="campo">
      <label for="Imagem">Imagem</label>
      <input type="File" name="Imagem" id="Imagem">
    </div>

      <button class="gradient btn" type="submit">Cadastrar</button>
    </form>

      <table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Titulo</th>
        <th>Foto</th>
    </thead>
    <tbody>
        @foreach(Noticias a in ViewBag.Noticias){
            <tr>
                <td>@a.IdNoticia</td>
                <td>@a.Titulo</td>
                <td><img src="img/noticias/@a.Imagem" alt="Imagem da noticia" width="40"></td>
                <td><a asp-area="" asp-controller="Noticia" asp-action="Excluir" asp-route-id="@a.IdNoticia"><i class="fa fa-trash"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>