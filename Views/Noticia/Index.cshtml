 @model Noticias
    @{
        ViewData["Title"] = "Noticias";
    }
    
    <form action="@Url.Action("Cadastrar")" method="post" enctype="multipart/form-data">
     
      <label for="IdNoticia">IdNoticia</label>
      <input type="text" name="IdNoticia" id="IdNoticia">

      <label for="Titulo">Titulo</label>
      <input type="text" name="Titulo" id="Titulo">

      <label for="Imagem">Imagem</label>
      <input type="File" name="Imagem" id="Imagem">


      <button type="submit">Cadastrar</button>

      <table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Titulo</th>
        <th>Foto</th>
    </thead>
    <tbody>
        @foreach(Noticias a in ViewBag.Noticias){
            <tr>
                <td>@a.IdNoticia</td>
                <td>@a.Titulo</td>
                <td><img src="img/Noticias/@a.Imagem" alt="Imagem da noticia" width="40"></td>
                <td><a asp-area="" asp-controller="Noticia" asp-action="Excluir" asp-route-id="@a.IdNoticia">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>
    </form>